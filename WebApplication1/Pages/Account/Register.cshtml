@page
@model WebApplication1.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Pages/_Layout.cshtml";
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
    <link rel="stylesheet" href="~/css/Register.css" />
}



    <form class="box" method="post">
        <h4>Create a new account</h4>
        <hr />
        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="Input.Email"></label>
            <input type="text" asp-for="Input.Email" />
            <span asp-validation-for="Input.Email"></span>
        </div>
        <div>
            <label asp-for="Input.Password"></label>
            <input type="password" asp-for="Input.Password" />
            <span asp-validation-for="Input.Password"></span>
        </div>
        <div>
            <label asp-for="Input.ConfirmPassword"></label>
            <input type="password" asp-for="Input.ConfirmPassword" />
            <span asp-validation-for="Input.ConfirmPassword"></span>
        </div>
        <div>Already have an account?<a class="SignIn" asp-page="/Account/Login"> Sign in</a></div>
        <button type="submit">Register</button>
    </form>


